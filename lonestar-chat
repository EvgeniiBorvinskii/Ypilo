server {
    listen 80;
    server_name api.ypilo.com 5.249.160.54;

    # Увеличенные таймауты для стабильности
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;

    # Размер буфера для больших запросов
    client_max_body_size 50M;

    # Логи
    access_log /var/log/nginx/lonestar-access.log;
    error_log /var/log/nginx/lonestar-error.log;

    # Статические файлы (uploads, avatars)
    location /uploads/ {
        alias /root/lonestar-chat/backend/uploads/;
        expires 7d;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # API и все остальное - проксируем на backend
    location / {
        proxy_pass http://localhost:666;
        proxy_http_version 1.1;
        
        # WebSocket support
        proxy_set_header Upgrade \$http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host \$host;
        proxy_cache_bypass \$http_upgrade;
        
        # Заголовки для правильной работы
        proxy_set_header X-Real-IP \$remote_addr;
        proxy_set_header X-Forwarded-For \$proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto \$scheme;
    }
}
